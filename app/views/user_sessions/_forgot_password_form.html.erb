<%= form_tag password_resets_path, :method => :post do %>
  <div class="field col-md-6 col-md-offset-3">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, nil,:class => "form-control" %> 
    <br>
    <%= submit_tag "Reset my password!", class: "btn btn-w-m btn-danger" %>
  </div>
<% end %>