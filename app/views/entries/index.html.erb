
<div class = 'page-header'>
	<h1>Imported transcripts</h1>
</div>

<table class = 'table table-striped table-bordered'>
	<thead>
		<tr>
			<td>Company Name</td>
			<td>Ticker</td>
			<td>Event Name</td>
			<td>Date</td>
			<td>Speaker</td>
			<td>Title</td>
			<td>Word Count</td>
			<td>Analysed?</td>
			<td></td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @entries.each do |e| %>
		<tr>
				<td><%= e.company_name %></td>
				<td><%= e.ticker %></td>
				<td><%= e.event_name %></td>
				<td><%= e.date.strftime('%A, %d %b %Y %l:%M %p') %></td>
				<td><%= e.speaker_name %></td>
				<td><%= e.speaker_title %></td>
				<td><%= e.wcount %></td>
				<td>
					<% if e.insights.nil? %>
						No
					<% else %>
						Yes
					<% end %>	
				</td>
				<td>
					<%= button_to 'Show', entry_path(e.id), method: :get, :class => "btn btn-primary" %> 
				</td>	
				<td>
					<%= button_to 'Edit', edit_entry_path(e.id), method: :get, :class => "btn btn-default" %>
				</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= button_to 'Upload New File', new_entry_path, method: :get, :class => 'btn btn-primary btn-lg' %>


