<!-- Below form_tag is for run Watson analytics on multiple selections -->
<%#= form_tag analyse_all_path do %>
<%= form_tag new_user_report_path(current_user), method: :get do %>
	<table class = 'table table-striped table-bordered table-condensed' id = 'allEntries'>
		<thead>
			<th ></th>
			<th >Company Name</th>
			<th >Ticker</th>
			<th >Event Name</th>
			<th >Date</th>
			<th >Speaker</th>
			<th >Title</th>
			<th >Word Count</th>
			<th ></th>
		</thead>
		<tbody>
			<% current_user.entries.each do |e| %>
				<tr>
					<td class='align-center'><%= check_box_tag "entries_ids[]", e.id %></td>
					<td><%= e.company_name %></td>
					<td><%= e.ticker %></td>
					<td><%= e.event_name %></td>
					<td><%= e.date.strftime('%m/%d/%Y') %></td>
					<td><%= e.speaker_name %></td>
					<td><%= e.speaker_title %></td>
					<td class='align-center'><%= e.wcount %></td>
					<td class='align-center'>
						<%= link_to 'Show', entry_path(e.id), method: :get, :class => "btn btn-primary" %> 
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= submit_tag "Analyse Checked", :class => 'btn btn-primary btn-lg' %>
<% end %>

